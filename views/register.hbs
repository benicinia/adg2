            <input type="text" name="lname" class="form-control" placeholder="last name" id="userName" required minlength="10">
            <div class="valid-feedback">
              <i class="far text-success fa-thumbs-up"></i> OK
            </div>
            <div class="invalid-feedback">
              <i class="fas text-danger fa-exclamation-triangle"></i> Some error in your name.
            </div>
          </div>
    </div>
   
  
</div>
         
          
